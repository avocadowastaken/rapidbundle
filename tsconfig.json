{
  "include": ["src", "test"],
  "exclude": ["test/errors"],
  "compilerOptions": {
    "noEmit": true,

    "allowJs": true,
    "checkJs": true,

    "target": "ES2019",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true
  }
}
