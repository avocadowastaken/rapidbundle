{
  "include": ["lib", "test"],
  "compilerOptions": {
    "noEmit": true,

    "allowJs": true,
    "checkJs": true,

    "target": "ES2019",
    "module": "CommonJS",
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
