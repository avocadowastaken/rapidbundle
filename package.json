{
  "name": "rapidbundle",
  "version": "0.4.0",
  "repository": "git@github.com:umidbekk/rapidbundle.git",
  "license": "MIT",
  "author": "Umidbek Karimov <4734297+umidbekk@users.noreply.github.com>",
  "bin": {
    "rapidbundle": "bin"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier . --write",
    "tdd": "jest --watch",
    "release": "np --no-2fa"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "yarn.lock": "npx yarn-deduplicate",
    "*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended-script"
    ],
    "overrides": [
      {
        "files": [
          "test/**",
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "node/no-extraneous-require": "off"
        },
        "globals": {
          "runIntegrationTest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "examples",
    "test/__fixtures__"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "/dist",
      "<rootDir>/node_modules/",
      "<rootDir>/test/__fixtures__/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "dependencies": {
    "debug": "^4.3.1",
    "esbuild": "^0.12.1",
    "execa": "^5.0.0",
    "listr": "^0.14.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-dts": "^3.0.2",
    "semver": "^7.3.5",
    "typanion": "^3.3.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.23",
    "@types/listr": "^0.14.3",
    "@types/lodash": "^4.14.169",
    "@types/lodash-es": "^4.17.4",
    "@types/resolve": "^1.20.0",
    "@types/semver": "^7.3.6",
    "eslint": "^7.26.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.3",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "np": "^7.5.0",
    "prettier": "^2.3.0",
    "prettier-plugin-jsdoc": "^0.3.22",
    "prettier-plugin-packagejson": "^2.2.11",
    "typescript": "^4.2.4"
  },
  "optionalDependencies": {
    "typescript": "*"
  },
  "engines": {
    "node": ">=12"
  }
}
