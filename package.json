{
  "name": "rapidbundle",
  "version": "0.16.0",
  "repository": "git@github.com:umidbekk/rapidbundle.git",
  "license": "MIT",
  "author": "Umidbek Karimov <4734297+umidbekk@users.noreply.github.com>",
  "type": "module",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ./src/cli.js",
    "cover": "c8 npm test",
    "pree2e": "npm run build",
    "e2e": "cross-env TEST_BUNDLE=true npm test",
    "format": "prettier . --write --check",
    "lint": "eslint .",
    "prepare": "husky install",
    "prerelease": "npx tsc && npm run lint && npm run e2e",
    "release": "np --no-2fa",
    "tdd": "npm test -- --watch",
    "test": "cross-env NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended-module"
    ],
    "rules": {
      "node/file-extension-in-import": "error"
    },
    "overrides": [
      {
        "files": [
          "test/**",
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "node/no-extraneous-require": "off"
        },
        "globals": {
          "runErrorTest": true,
          "runIntegrationTest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist",
    "examples",
    "src/cli.js"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "/dist",
      "<rootDir>/scripts/",
      "<rootDir>/node_modules/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 60000,
    "transform": {},
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.17.9",
    "browserslist": "^4.20.3",
    "enquirer": "^2.3.6",
    "esbuild": "^0.14.38",
    "listr2": "^4.0.5",
    "rollup": "^2.70.2",
    "rollup-plugin-dts": "^4.2.1"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/semver": "7.3.9",
    "@umidbekk/configs": "0.2.0",
    "c8": "7.11.2",
    "cross-env": "^7.0.3",
    "eslint": "8.14.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "7.0.4",
    "jest": "28.0.1",
    "jest-watch-typeahead": "1.1.0",
    "lint-staged": "12.4.0",
    "lodash": "4.17.21",
    "np": "7.6.1",
    "prettier": "2.6.2",
    "prettier-plugin-jsdoc": "0.3.38",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-packagejson": "2.2.17",
    "semver": "7.3.7",
    "strip-ansi": "7.0.1",
    "yaml": "2.0.1",
    "zod": "3.14.4"
  },
  "optionalDependencies": {
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=14.19",
    "npm": ">=7"
  },
  "volta": {
    "node": "14.19.1",
    "npm": "7.24.2"
  }
}
