{
  "name": "rapidbundle",
  "version": "0.13.0",
  "repository": "git@github.com:umidbekk/rapidbundle.git",
  "license": "MIT",
  "author": "Umidbek Karimov <4734297+umidbekk@users.noreply.github.com>",
  "type": "module",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ./src/cli.js",
    "cover": "npm run test -- --coverage",
    "pree2e": "npm run build",
    "e2e": "npm run test -- --e2e",
    "format": "prettier . --write --check",
    "lint": "eslint .",
    "prepare": "husky install",
    "prerelease": "npx tsc && npm run lint && npm run e2e",
    "release": "np --no-2fa",
    "tdd": "npm run test -- --watch",
    "test": "node ./scripts/test.js"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended-module"
    ],
    "overrides": [
      {
        "files": [
          "test/**",
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "node/no-extraneous-require": "off"
        },
        "globals": {
          "runErrorTest": true,
          "runIntegrationTest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist",
    "examples",
    "src/cli.js"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "/dist",
      "<rootDir>/scripts/",
      "<rootDir>/node_modules/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 60000,
    "transform": {},
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.15.0",
    "browserslist": "^4.17.0",
    "enquirer": "^2.3.6",
    "esbuild": "^0.13.0",
    "execa": "^5.1.1",
    "listr2": "^3.11.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.2",
    "rollup-plugin-dts": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/rimraf": "3.0.2",
    "@types/semver": "7.3.9",
    "@umidbekk/configs": "0.1.0",
    "c8": "7.9.0",
    "eslint": "8.1.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "7.0.4",
    "jest": "27.2.4",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "11.1.2",
    "lodash": "4.17.21",
    "np": "7.5.0",
    "prettier": "2.4.1",
    "prettier-plugin-jsdoc": "0.3.30",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-packagejson": "2.2.15",
    "semver": "7.3.5",
    "strip-ansi": "7.0.1",
    "yaml": "1.10.2",
    "zod": "3.9.5"
  },
  "optionalDependencies": {
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=12.22",
    "npm": ">=7"
  }
}
