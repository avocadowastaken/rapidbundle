{
  "name": "rapidbundle",
  "version": "0.9.0",
  "repository": "git@github.com:umidbekk/rapidbundle.git",
  "license": "MIT",
  "author": "Umidbek Karimov <4734297+umidbekk@users.noreply.github.com>",
  "type": "module",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "node ./src/cli.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules c8 --reporter lcov jest",
    "lint": "eslint .",
    "format": "prettier . --write",
    "tdd": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "prerelease": "yarn tsc && yarn lint && yarn test",
    "release": "np --no-2fa"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "yarn.lock": "npx yarn-deduplicate",
    "*.*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended-module"
    ],
    "overrides": [
      {
        "files": [
          "test/**",
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "node/no-extraneous-require": "off"
        },
        "globals": {
          "runErrorTest": true,
          "runIntegrationTest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist",
    "examples",
    "src/cli.js"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "/dist",
      "<rootDir>/node_modules/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 60000,
    "transform": {},
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "dependencies": {
    "esbuild": "^0.12.13",
    "rollup": "^2.52.6",
    "rollup-plugin-dts": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.6",
    "c8": "^7.7.3",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "eslint": "^7.29.0",
    "eslint-plugin-node": "^11.1.0",
    "execa": "^5.1.1",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "listr2": "^3.10.0",
    "lodash": "^4.17.21",
    "np": "^7.5.0",
    "prettier": "^2.3.2",
    "prettier-plugin-jsdoc": "^0.3.23",
    "prettier-plugin-organize-imports": "^2.2.0",
    "prettier-plugin-packagejson": "^2.2.11",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "strip-ansi": "^7.0.0",
    "yaml": "^1.10.2",
    "zod": "^3.2.0"
  },
  "optionalDependencies": {
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=12.22"
  }
}
