{
  "name": "rapidbundle",
  "version": "0.19.0",
  "repository": "git@github.com:umidbekk/rapidbundle.git",
  "license": "MIT",
  "author": "Umidbek Karimov <4734297+umidbekk@users.noreply.github.com>",
  "type": "module",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ./src/cli.js",
    "checks": "npm run format -- --no-write && npx tsc && npm run lint && npm run test && npm run e2e",
    "pree2e": "npm run build && npx .",
    "e2e": "cross-env TEST_BUNDLE=true npx vitest --run",
    "format": "prettier . --write --check",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "np --test-script checks",
    "tdd": "npx vitest --watch",
    "test": "npx vitest --run --coverage"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended-module"
    ],
    "rules": {
      "node/file-extension-in-import": "error",
      "node/no-missing-import": "off",
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules",
            "dynamicImport"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "test/**",
          "*.spec.js",
          "vitest.config.js"
        ],
        "rules": {
          "node/no-extraneous-require": "off",
          "node/no-unpublished-import": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist",
    "examples",
    "src/cli.js"
  ],
  "dependencies": {
    "browserslist": "^4.21.4",
    "enquirer": "^2.3.6",
    "esbuild": "^0.16.17",
    "js-yaml": "^4.1.0",
    "listr2": "^5.0.6",
    "rollup": "^3.10.0",
    "rollup-plugin-dts": "^5.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "4.0.5",
    "@types/semver": "7.3.13",
    "@umidbekk/configs": "0.2.0",
    "@vitest/coverage-c8": "0.28.4",
    "cross-env": "7.0.3",
    "eslint": "8.31.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "lodash": "4.17.21",
    "np": "7.6.3",
    "prettier": "2.8.2",
    "prettier-plugin-jsdoc": "0.4.2",
    "prettier-plugin-organize-imports": "3.2.1",
    "prettier-plugin-packagejson": "2.3.0",
    "semver": "7.3.8",
    "strip-ansi": "7.0.1",
    "vitest": "^0.28.4",
    "vitest-github-actions-reporter": "^0.9.0",
    "zod": "3.20.2"
  },
  "optionalDependencies": {
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14.19",
    "npm": ">=8"
  },
  "volta": {
    "node": "14.19.1",
    "npm": "8.19.3"
  }
}
