{
  "name": "rapidbundle",
  "version": "0.6.0",
  "repository": "git@github.com:umidbekk/rapidbundle.git",
  "license": "MIT",
  "author": "Umidbek Karimov <4734297+umidbekk@users.noreply.github.com>",
  "type": "module",
  "bin": "./lib/cli.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules c8 --reporter lcov jest",
    "lint": "eslint .",
    "format": "prettier . --write",
    "tdd": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "release": "np --no-2fa"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "yarn.lock": "npx yarn-deduplicate",
    "*.*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended-module"
    ],
    "overrides": [
      {
        "files": [
          "test/**",
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "node/no-extraneous-require": "off"
        },
        "globals": {
          "runErrorTest": true,
          "runIntegrationTest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "examples",
    "lib/cli.js"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "/dist",
      "<rootDir>/node_modules/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 60000,
    "transform": {},
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "esbuild": "^0.12.6",
    "execa": "^5.1.1",
    "listr": "^0.14.3",
    "pretty-ms": "^7.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.51.1",
    "rollup-plugin-dts": "^3.0.2",
    "semver": "^7.3.5",
    "yaml": "^1.10.2",
    "zod": "^3.1.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.23",
    "@types/listr": "^0.14.3",
    "@types/lodash": "^4.14.170",
    "@types/lodash-es": "^4.17.4",
    "@types/resolve": "^1.20.0",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.6",
    "c8": "^7.7.2",
    "eslint": "^7.28.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "np": "^7.5.0",
    "prettier": "^2.3.1",
    "prettier-plugin-jsdoc": "^0.3.22",
    "prettier-plugin-organize-imports": "^2.1.0",
    "prettier-plugin-packagejson": "^2.2.11",
    "strip-ansi": "^7.0.0"
  },
  "optionalDependencies": {
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=12.22"
  }
}
