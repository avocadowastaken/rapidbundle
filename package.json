{
  "name": "rapidbundle",
  "version": "0.18.0",
  "repository": "git@github.com:umidbekk/rapidbundle.git",
  "license": "MIT",
  "author": "Umidbek Karimov <4734297+umidbekk@users.noreply.github.com>",
  "type": "module",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ./src/cli.js",
    "checks": "npm run format -- --no-write && npx tsc && npm run lint && npm run test && npm run e2e",
    "pree2e": "npm run build",
    "e2e": "cross-env TEST_BUNDLE=true npm run jest",
    "format": "prettier . --write --check",
    "jest": "cross-env NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "np --test-script checks",
    "tdd": "npm run jest -- --watch",
    "test": "c8 npm run jest --"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended-module"
    ],
    "rules": {
      "node/file-extension-in-import": "error",
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules",
            "dynamicImport"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "test/**",
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "node/no-extraneous-require": "off"
        },
        "globals": {
          "runErrorTest": true,
          "runIntegrationTest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist",
    "examples",
    "src/cli.js"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "/dist",
      "<rootDir>/scripts/",
      "<rootDir>/node_modules/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 60000,
    "transform": {},
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "dependencies": {
    "browserslist": "^4.21.4",
    "enquirer": "^2.3.6",
    "esbuild": "^0.16.17",
    "js-yaml": "^4.1.0",
    "listr2": "^5.0.6",
    "rollup": "^3.10.0",
    "rollup-plugin-dts": "^5.1.1"
  },
  "devDependencies": {
    "@types/jest": "29.2.5",
    "@types/js-yaml": "4.0.5",
    "@types/semver": "7.3.13",
    "@umidbekk/configs": "0.2.0",
    "c8": "7.12.0",
    "cross-env": "7.0.3",
    "eslint": "8.31.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "jest-watch-typeahead": "2.2.1",
    "lint-staged": "13.1.0",
    "lodash": "4.17.21",
    "np": "7.6.3",
    "prettier": "2.8.2",
    "prettier-plugin-jsdoc": "0.4.2",
    "prettier-plugin-organize-imports": "3.2.1",
    "prettier-plugin-packagejson": "2.3.0",
    "semver": "7.3.8",
    "strip-ansi": "7.0.1",
    "zod": "3.20.2"
  },
  "optionalDependencies": {
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14.19",
    "npm": ">=7"
  },
  "volta": {
    "node": "14.19.1",
    "npm": "7.24.2"
  }
}
